---
import HeaderLink from './HeaderLink.astro';
---

<header class="bg-white dark:bg-neutral-900 shadow-sm border-b border-gray-200 dark:border-gray-700 sticky top-0 z-50">
	<nav class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
		<div class="flex items-center">
			<a href="/" class="block hover:opacity-80 transition-opacity duration-200">
				<img src="/codevs_logo.svg" alt="CODEVS Logo" class="h-8 w-auto" />
			</a>
		</div>
		
		<div class="hidden md:flex items-center space-x-6">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			
			<!-- Dropdown para Recursos -->
			<div class="relative group">
				<button class="text-gray-700 dark:text-gray-300 hover:text-primary-900 dark:hover:text-primary-300 transition-colors duration-200 flex items-center gap-1">
					Recursos
					<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
					</svg>
				</button>
				<div class="absolute top-full left-0 mt-2 w-48 bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
					<div class="py-2">
						<a href="/knowledge-base" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
							 Base de Conocimientos
						</a>
						<a href="/lab" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
							И Labs
						</a>
						<a href="/docs" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
							 Documentaci贸n
						</a>
					</div>
				</div>
			</div>
			
			<HeaderLink href="/proyectos">Proyectos</HeaderLink>
			
			<HeaderLink href="/stats">Stats</HeaderLink>
			
			<!-- Dropdown para Comunidad -->
			<div class="relative group">
				<button class="text-gray-700 dark:text-gray-300 hover:text-primary-900 dark:hover:text-primary-300 transition-colors duration-200 flex items-center gap-1">
					Comunidad
					<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
					</svg>
				</button>
				<div class="absolute top-full left-0 mt-2 w-48 bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
					<div class="py-2">
						<a href="/members" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
							 Miembros
						</a>
						<a href="https://discord.gg/codevs" target="_blank" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
							 Discord
						</a>
						<a href="https://t.me/codevs" target="_blank" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
							 Telegram
						</a>
						<a href="/feedback" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
							 Feedback
						</a>
					</div>
				</div>
			</div>
			
			<HeaderLink href="/about">Acerca de</HeaderLink>
		</div>
		
		<div class="flex items-center space-x-4">
			<a href="https://github.com/Comunidad-Codevs" target="_blank" class="text-gray-600 dark:text-gray-400 hover:text-primary-900 dark:hover:text-primary-300 transition-colors duration-200" aria-label="GitHub">
				<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 16 16">
					<path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"></path>
				</svg>
			</a>
			
			<!-- Mobile menu button -->
			<button class="md:hidden p-2 text-gray-600 dark:text-gray-400 hover:text-primary-900 dark:hover:text-primary-300" aria-label="Men煤">
				<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
				</svg>
			</button>
		</div>
	</nav>
	
	<!-- Mobile menu -->
	<div class="md:hidden border-t border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-900">
		<div class="px-6 py-4 space-y-1">
			<HeaderLink href="/" class="block">Home</HeaderLink>
			<HeaderLink href="/blog" class="block">Blog</HeaderLink>
			
			<!-- Recursos en m贸vil -->
			<div class="py-2">
				<div class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">Recursos</div>
				<div class="ml-4 space-y-1">
					<a href="/knowledge-base" class="block py-1 text-sm text-gray-700 dark:text-gray-300">
						 Base de Conocimientos
					</a>
					<a href="/lab" class="block py-1 text-sm text-gray-700 dark:text-gray-300">
						И Labs
					</a>
					<a href="/docs" class="block py-1 text-sm text-gray-700 dark:text-gray-300">
						 Documentaci贸n
					</a>
				</div>
			</div>
			
			<HeaderLink href="/proyectos" class="block">Proyectos</HeaderLink>
			
			<HeaderLink href="/stats" class="block">Stats</HeaderLink>
			
			<!-- Comunidad en m贸vil -->
			<div class="py-2">
				<div class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">Comunidad</div>
				<div class="ml-4 space-y-1">
					<a href="/members" class="block py-1 text-sm text-gray-700 dark:text-gray-300">
						 Miembros
					</a>
					<a href="https://discord.gg/codevs" target="_blank" class="block py-1 text-sm text-gray-700 dark:text-gray-300">
						 Discord
					</a>
					<a href="https://t.me/codevs" target="_blank" class="block py-1 text-sm text-gray-700 dark:text-gray-300">
						 Telegram
					</a>
					<a href="/feedback" class="block py-1 text-sm text-gray-700 dark:text-gray-300">
						 Feedback
					</a>
				</div>
			</div>
			
			<HeaderLink href="/about" class="block">Acerca de</HeaderLink>
		</div>
	</div>
</header>
