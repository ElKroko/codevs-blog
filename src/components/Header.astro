			<!-- Mobile menu button -->
			<button class="md:hidden p-2 text-gray-600 dark:text-gray-400 hover:text-primary-900 dark:hover:text-primary-300" aria-label="MenÃº">
				<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
				</svg>
			</button>
		</div>
	</nav>
	
	<!-- Mobile menu -->
	<div class="md:hidden border-t border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-900">
		<div class="px-6 py-4 space-y-2">
			<HeaderLink href="/" class="block">Home</HeaderLink>
			<HeaderLink href="/blog" class="block">Blog</HeaderLink>
			<HeaderLink href="/about" class="block">Acerca de</HeaderLink>
		</div>
	</div>
</header>
